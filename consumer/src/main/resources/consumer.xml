<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="demo-consumer" />
    <dubbo:registry group="aaa" address="zookeeper://192.168.30.112:2181" />
    <bean id="demoCallback" class="com.dubbos.consumer.NotifyImpl" />

    <dubbo:reference id="demoService" check="false" interface="com.dubbos.api.DemoService">
        <dubbo:method name="sayHello" onreturn="demoCallback.onReturn" onthrow="demoCallback.onThrow" />
    </dubbo:reference>
</beans>